<import src="../../templates/tmpl.wxml"/>
<swiper class='index-top-card' indicator-dots autoplay interval="3000" duration="500">
  <block wx:for="{{topData}}" wx:for-item="item" wx:key="{{item.id}}">
    <swiper-item>
      <image bindtap="goToPath" data-item="{{item}}" src="{{item.cover}}" lazy-load="true" class="index-slide-image" />
    </swiper-item>
  </block>
</swiper>
<view class='container'>
<!--推荐课程  -->
<template is="nominateCourse" data="{{nominateList}}"/>
<!--热门课程  -->
<template is="hotCourse" data="{{hotList}}"/>

</view>