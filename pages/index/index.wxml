<swiper class='index-top-card' indicator-dots autoplay interval="3000" duration="500">
  <block wx:for="{{topData}}" wx:for-item="item" wx:key="{{item.id}}">
    <swiper-item>
      <image  src="{{item.cover}}" class="index-slide-image"/>
    </swiper-item>
  </block>
</swiper> 
<view class='container'>
  
   <text class='card-title'><text class='vui-icon icon-recommend'/>推荐课程</text>
   <icons id="icons" type='icon-recommend'  style="width: 24rpx;height: 27rpx;"/>
   <text class='more'>更多<text class='vui-icon icon-more'></text></text>
 </view>



