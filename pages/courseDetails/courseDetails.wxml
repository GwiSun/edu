<view class="course-detatils">
  <vui-video class='course-details-video' id="video" url="{{course.playUrl}}" />
  <view class="vui-menu">
    <view wx:for="{{['简介','评论','课件']}}" wx:for-item="item" wx:key="{{index}}" bind:tap="clickItem" data-index="{{index}}" class="vui-menu-item-3 {{avtiveItem==index?'vui-menu-avtive':''}}">{{item}}</view>
  </view>

  <!--课程内容区  -->
  <view class='course-content'>
    <!--简介  -->
    <view hidden="{{avtiveItem!==0}}">
      <!--作者 -->
      <card wx:if="{{course.author}}" class='course-author'>
        <view slot="title" class='vui-card-title'>
          <image src='{{course.author.cover}}' class='course-author-cover' />
          <text class='course-author-name'>
          {{course.author.name}}
          </text>
          <view slot="extra" class='vui-card-extra'>关注
            <i name="more" />
          </view>
        </view>
      </card>
      <!--课程统计  -->
      <card>
        <view slot="title" class="vui-menu course-stat">
          <!-- <view wx:for="{{['点赞','评论','收藏','分享']}}" wx:for-item="item" wx:key="{{index}}" class="vui-menu-item-4">{{item}}</view> -->
          <view class='vui-menu-item-4'>
            <i name='browse' />{{course.like}}
          </view>

          <view class='vui-menu-item-4'>
            <i name='collect' />{{course.op}}
          </view>

          <view class='vui-menu-item-4'>
            <i name='money' />{{course.collect}}
          </view>

          <view class='vui-menu-item-4'>
            <i name='money' />{{course.share}}
          </view>

        </view>
      </card>
      <!--课程简介  -->
      <view class='course-summary'>
        {{course.summary}}
      </view>
    </view>

    <!--评论 -->
    <view hidden="{{avtiveItem!==1}}" class='course-details-opinion'>
      <card wx:for="{{courseOpinions}}" wx:for-item="user" wx:key="{{user.id}}">
        <view slot="title" class='course-opinion-user'>
          <image class='course-opinion-user-cover' src='{{user.cover}}' />
          <text class='course-opinion-user-name'>{{user.name}}</text>
          <text class='course-opinion-user-time'>{{user.time}}</text>
          <view slot="extra" class='vui-card-extra'>
            <i name="browse" />{{user.likes}}</view>
        </view>
        <!--发言内容-->
        <view slot="content" class='course-opinion-content'>
          {{user.content}}
        </view>
      </card>
      <view class='course-opinion-btn'>
         <input class='opinion-btn-input' placeholder="我要发言" placeholder-class='course-opinion-placeholder-class'/>
      </view>
    </view>

    <!-- 课件 -->
    <view hidden="{{avtiveItem!==2}}">
      课件{{avtiveItem}}
    </view>

  </view>
</view>