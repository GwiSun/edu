.course-detatils {
  overflow-x: hidden;
}

page {
  background-color: #fff;
}

.vui-menu {
  margin-top: -8rpx;
}

.course-details-video, video {
  width: 100%;
  height: 380rpx;
}

/*内容区  */

.course-content {
  position: fixed;
  bottom: 15rpx;
  top: 475rpx;
  width: 92%;
  overflow-y: scroll;
  left: 4%;
  right: 4%;
  overflow-x: hidden;
  padding: 15rpx 0 40rpx 0;
  z-index: -10;
}

