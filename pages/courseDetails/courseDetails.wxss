.course-detatils {
  overflow-x: hidden;
}
page {
  background-color: #fff;
}
.course-details-video, video {
  width: 100%;
  height: 380rpx;
}
/*视频播放导航菜单  */
.vui-menu {
  width: 100%;
  height: 90rpx;
  line-height: 80rpx;
  display: inline-block;
  background-color: #fff;
  box-shadow: 0 1rpx 5px 1px #eee;
  text-align: center;
  margin-top: -8rpx;
}

.vui-menu-avtive {
  color: #a3d900 !important;
}

.vui-menu-item-3, .vui-menu-item-4, .vui-menu-item-5 {
  float: left;
  box-sizing: border-box;
  color: #999;
  border-right: solid 1rpx #f8f6f6;
}

.vui-menu-item-3 {
  width: 33.3%;
}

.vui-menu-item-4 {
  width: 25%;
}

.vui-menu-item-5 {
  width: 20%;
}

.vui-menu-item:last-child {
  border-right: none;
}

/*内容区  */

.course-content {
  position: fixed;
  bottom: 80rpx;
  top: 470rpx;
  width: 92%;
  overflow-y: scroll;
  left: 4%;
  right: 4%;
  overflow-x: hidden;
  padding-bottom: 30rpx;
  z-index: -10
}

/*课程作者  */

.course-author {
  display: inline-block;
  width: 100%;
  height: 185rpx;
  border-bottom: solid 1rpx #f5f5f5;
}

/*头像  */
.course-author-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  float: left;
}

.course-author-name,.course-opinion-user-name {
  color: #3c8dff;
  display: inline-block;
}

/*课程作者名称 */
.course-author-name {
  margin: -25rpx 18rpx;
}

.vui-card-extra {
  margin: 28rpx 0;
  color: #999;
}


/*课程简介  */
.course-summary {
  font-size: 30rpx;
  color: #666;
  text-indent: 40rpx;
}

/*课程统计 */

.course-stat {
  color: #ccc;
  height: 100rpx;
  line-height: 110rpx;
  display: inline-block;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  margin: 0 0 15rpx 0;
}

/*课程发言用户  */
.course-opinion-user {
  height: 90rpx;
  line-height: 90rpx;
}

/*发言用户头像  */
.course-opinion-user-cover {
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  margin-top: 12rpx;
  float: left;
}

/*发言用户作者  */
.course-opinion-user-name {
  margin: 0rpx 18rpx;  
}

/*发言时间  */

.course-opinion-user-time {
  color: #999;
  font-size: 28rpx;
}

/*发言内容  */
.course-opinion-content { 
  font-size: 28rpx;
  color: #707070;
  margin-top: 15rpx;
}

/*发言按钮  */
.course-opinion-btn {
  background-color: rgba(0, 0, 0, 0.5);
  margin-left:-29rpx;
  opacity: 0.8;
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  box-shadow: 0 -2px 5px -1px #999;
  color: #fff;
}
