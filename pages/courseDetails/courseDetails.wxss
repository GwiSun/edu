} */

/*课程标题  */

.course-title {
  font-size: 35rpx;
  margin: 25rpx auto;
  width: 100%;
  display: inline-block;
  color: #333;
}

/*课程作者名称 */

.course-author-name {
  margin: -25rpx 18rpx;
}

.vui-card-extra {
  margin: 28rpx 0;
  color: #999;
}

/*课程简介  */

.course-summary {
  font-size: 28rpx;
  color: #999;
  text-indent: 40rpx;
}

/*课程统计 */

.course-stat {
  color: #ccc;
  height: 100rpx;
  line-height: 110rpx;
  display: inline-block;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  margin: 0 0 15rpx 0;
}

/*发言按钮  */

.course-opinion-btn {
  background-color: #fafafa;
  margin-left: -29rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  box-shadow: 0 -2px 5px -1px #d7d7d7;
}

/*发言输入框  */

.opinion-btn-input {
  border: solid 1rpx #e7e7e7;
  height: 70rpx;
  line-height: 70rpx;
  width: 80%;
  border-radius: 35rpx;
  margin: 15rpx 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  background-color: #f4f4f4;
  color: #707070;
  float: left;
}

/*发言icon  */

.opinion-icon {
  display: inline-block;
  margin: 23rpx 0 0 -5rpx;
}

/*课程附件*/

.course-file {
  color: #3c8dff;
  font-size: 30rpx;
  width: 100%;
}

.course-file-item {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid 1rpx #f5f5f5;
  display: inline-block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.course-file-item:last-child {
  border-bottom: none;
}
